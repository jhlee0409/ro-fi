        const target = e.target as HTMLElement;
        if (!target) return;

        const order = target.dataset.sort;
        if (!order) return;

        // í™œì„± ë²„íŠ¼ ìŠ¤íƒ€ì¼ ì—…ë°ì´íŠ¸
        sortButtons.forEach(btn => {
