{
  "name": "ro-fi",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:cypress": "cypress run",
    "test:e2e:cypress:open": "cypress open",
    "test:e2e:cypress:ci": "cypress run --browser chrome --headless",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "pnpm test && pnpm test:e2e && pnpm test:e2e:cypress",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "security:audit": "pnpm audit",
    "security:snyk": "snyk test",
    "gemini-code:manual": "./scripts/run-gemini-workflow.sh auto high",
    "gemini-code:new-novel": "./scripts/run-gemini-workflow.sh new_novel high",
    "gemini-code:continue": "./scripts/run-gemini-workflow.sh continue_chapter high",
    "gemini-code:complete": "./scripts/run-gemini-workflow.sh complete_novel high",
    "gemini-code:status": "echo 'GitHub Actions에서 직접 확인: https://github.com/jhlee0409/ro-fi/actions'",
    "ai-novel:run": "node scripts/ai-novel-generator.js",
    "ai-novel:auto": "node scripts/ai-novel-generator.js --mode auto",
    "ai-novel:new": "node scripts/ai-novel-generator.js --mode new_novel",
    "ai-novel:continue": "node scripts/ai-novel-generator.js --mode continue_chapter",
    "ai-novel:complete": "node scripts/ai-novel-generator.js --mode complete_novel",
    "ai-novel:test": "node scripts/ai-novel-generator.js --dry-run",
    "ai-novel:system-test": "node scripts/test-gemini-system.js",
    "gh:install": "brew install gh && gh auth login",
    "actions:init": "node scripts/local-github-actions.js init",
    "actions:list": "node scripts/local-github-actions.js list",
    "actions:validate": "node scripts/local-github-actions.js validate",
    "actions:run": "node scripts/local-github-actions.js run",
    "actions:test": "node scripts/test-local-actions.js",
    "actions:setup": "bash scripts/setup-local-actions.sh",
    "actions:fix-auth": "node scripts/fix-act-auth.js fix",
    "actions:check-auth": "node scripts/fix-act-auth.js check",
    "cleanup": "bash scripts/cleanup-project.sh",
    "cleanup:scripts": "bash scripts/cleanup-scripts.sh",
    "ci": "pnpm lint && pnpm type-check && pnpm test:coverage && pnpm test:e2e",
    "ci:cypress": "pnpm lint && pnpm type-check && pnpm test:coverage && pnpm test:e2e:cypress",
    "ci:all": "pnpm lint && pnpm type-check && pnpm test:coverage && pnpm test:e2e && pnpm test:e2e:cypress",
    "postinstall": "./node_modules/.bin/playwright install || npx playwright install || echo 'Playwright install failed, continuing...'"
  },
  "dependencies": {
    "@astrojs/react": "^4.0.0",
    "@astrojs/tailwind": "^6.0.0",
    "@astrojs/vercel": "^8.2.2",
    "@google/generative-ai": "^0.21.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "astro": "^5.12.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.1",
    "framer-motion": "^11.0.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.5",
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "autoprefixer": "^10.4.16",
    "cypress": "^14.5.3",
    "cypress-axe": "^1.6.0",
    "cypress-real-events": "^1.14.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^16.3.0",
    "postcss": "^8.4.33",
    "prettier": "^3.4.2",
    "snyk": "^1.1294.0",
    "supertest": "^7.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.0.0"
  }
}
